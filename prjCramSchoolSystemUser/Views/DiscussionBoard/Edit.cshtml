@model prjCoreCramSchoolDB.ViewModels.CPostViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>編輯貼文</h1>

<h4>TPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FPostId" />
            <div class="form-group">
                <label asp-for="FPostTitle" class="control-label"></label>
                <input asp-for="FPostTitle" class="form-control" />
                <span asp-validation-for="FPostTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FPostContent" class="control-label"></label>
                <input asp-for="FPostContent" class="form-control" />
                <span asp-validation-for="FPostContent" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="FPostTime" class="control-label"></label>
                <input asp-for="FPostTime" class="form-control" />
                <span asp-validation-for="FPostTime" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="FAccount" class="control-label"></label>
                <input asp-for="FAccount" class="form-control" />
                <span asp-validation-for="FAccount" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="FPostUpdateTime" class="control-label"></label>
                <input asp-for="FPostUpdateTime" class="form-control" />
                <span asp-validation-for="FPostUpdateTime" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="FPhotoId" class="control-label"></label>
                <input asp-for="FPhotoId" class="form-control" />
                <span asp-validation-for="FPhotoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Post">回貼文一覽</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
