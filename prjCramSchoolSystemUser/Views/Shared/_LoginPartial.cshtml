@using Microsoft.AspNetCore.Identity
@using prjCramSchoolSystemUser.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul>
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            帳號<span class="arrow_carrot-down"></span>
            <ul>
                <li>
                    <a class="text-nowrap btn text-white-50" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">會員中心</a>
                </li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="text-nowrap btn text-white-50">登出</button>
                    </form>
                </li>
            </ul>
        </li>
        <li class="text-nowrap"><a class="text-nowrap" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a></li>
    }
    else
    {
        <li class="text-nowrap">
            <a class="text-dark" asp-area="Identity" asp-page="/Account/Register">註冊</a>
        </li>
        <li class="text-nowrap">
            <a class="text-dark" asp-area="Identity" asp-page="/Account/Login">會員登入</a>
        </li>
    }
</ul>
