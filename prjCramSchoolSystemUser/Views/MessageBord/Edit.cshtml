@model prjCoreCramSchoolDB.Models.TPost

@{
    ViewData["Title"] = "Edit";
}

<h1 class="container">編輯文章</h1>


<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="FPostId" />
                <div class="form-group">
                    <label asp-for="FPostTitle" class="control-label">文章標題</label>
                    <input asp-for="FPostTitle" class="form-control" />
                    <span asp-validation-for="FPostTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FPostContent" class="control-label">文章內容</label>
                    <input asp-for="FPostContent" class="form-control" />
                    <span asp-validation-for="FPostContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FPostTime" class="control-label">發文時間</label>
                    <input asp-for="FPostTime" class="form-control" />
                    <span asp-validation-for="FPostTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FAccount" class="control-label">發文帳號</label>
                    <input asp-for="FAccount" class="form-control" />
                    <span asp-validation-for="FAccount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FPostUpdateTime" class="control-label">編輯時間</label>
                    <input asp-for="FPostUpdateTime" class="form-control" />
                    <span asp-validation-for="FPostUpdateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FPhotoId" class="control-label">文內圖檔</label>
                    <input asp-for="FPhotoId" class="form-control" />
                    <span asp-validation-for="FPhotoId" class="text-danger"></span>
                    @*上傳圖片功能的控制項*@
                    <div class="form-group">
                        <label asp-for="FPhotoId" class="control-label">選擇圖檔</label>
                        <input type="file" class="form-control-file" id="postPicture" name="postPicture">
                    </div>

                </div>
                <div class="form-group">
                    <label asp-for="FPostSort" class="control-label">文章分類</label>
                    <input asp-for="FPostSort" class="form-control" />
                    <span asp-validation-for="FPostSort" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div>
                    <label></label>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
